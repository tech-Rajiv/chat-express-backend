generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-3.0.x"]
}
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int      @id @default(autoincrement())
  name     String
  email    String   @unique
  password String
  // ðŸ‘‡ This connects back to Profile
  profile  Profile?
}

model Profile {
  id         Int       @id @default(autoincrement())
  avatarUrl  String?
  status     String?
  userId     Int       @unique

  // ðŸ‘‡ This connects to User
  user       User      @relation(fields: [userId], references: [id])
}
